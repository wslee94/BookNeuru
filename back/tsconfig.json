{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "paths": {
    "library/*": ["library/*"],
    "api/*": ["api/*"],
    "config/*": ["config/*"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
