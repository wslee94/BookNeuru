{
  "compilerOptions": {
    "baseUrl": ".",
		"paths": {
      "public/*": ["public/*"],
      "styles/*": ["styles/*"],
      "app/*": ["src/app/*"],
      "components/*": ["src/components/*"],
      "containers/*": ["src/containers/*"],
      "helpers/*": ["src/helpers/*"],
      "config/*": ["src/config/*"],
      "data/*": ["src/data/*"],
      "atoms/*": ["src/recoil/atoms/*"],
      "selectors/*": ["src/recoil/selectors/*"]
		},
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*"
  ],
  "exclude":["node_modules"]
}
