{
    "env": { // 사전 정의된 전역 변수 사용 의미 
        "browser": true, // 브라우저에서 사용하는 전역 변수를 사용
        "es2021": true // es2021 문법까지 lint 범위 설정
    },
    "parser": "@typescript-eslint/parser", // ESLint 구문 분석을 위해 사용 (@typescript-eslint/parser: typescript 구문 분석을 위해 사용)
    "parserOptions": { // ESLint 사용을 위해 지원하려는 언어 옵션을 지정
        "ecmaFeatures": {
            "jsx": true // ECMScript 규격의 JSX 사용 여부
        },
        "ecmaVersion": 12, // 사용할 ECMAScript 버전을 설정
        "sourceType": "module" // parser의 export 형태를 설정
    },
    "plugins": ["@typescript-eslint", "prettier"], // ESLint에서 제공하지 않는 다양한 규칙을 plugin을 통해 제공
    "extends": [ // 추가한 플러그인에서 사용할 규칙을 설정, 플러그인은 일련의 규칙 집합이며, 플러그인만 추가하면 규칙은 적용되지 않는다.
      "airbnb",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:prettier/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
  
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
      "linebreak-style": 0,
      "import/prefer-default-export": 0,
      "prettier/prettier": 0,
      "import/extensions": 0,
      "no-use-before-define": 0,
      "import/no-unresolved": 0,
      "import/no-extraneous-dependencies": 0, // 테스트 또는 개발환경을 구성하는 파일에서는 devDependency 사용을 허용
      "no-shadow": 0,
      "react/prop-types": 0,
      "react/jsx-filename-extension": [2, { "extensions": [".js", ".jsx", ".ts", ".tsx"] }],
      "jsx-a11y/no-noninteractive-element-interactions": 0
    }
}
